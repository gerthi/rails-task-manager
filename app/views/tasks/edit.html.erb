<h2>Update task</h2>
<%= form_for(@task) do |t| %>
  <%= t.label :title %>
  <%= t.text_field :title %>
  <%= t.label :details %>
  <%= t.text_field :details %>
  <%= t.label :completed %>
  <%= t.check_box :completed %>
  <%= t.submit %>
<% end %>
<%= link_to 'Delete task', 
task_path(@task), 
method: :delete, 
data: { confirm: "u sure bro ?" } %>